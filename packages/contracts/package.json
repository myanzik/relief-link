{
	"name": "@nest-react/contracts",
	"version": "1.0.0",
	"description": "A Basic Hardhat scaffolding porject to deploy contracts on Base",
	"author": "Gerald Lonlas",
	"license": "MIT",
	"scripts": {
		"compile": "hardhat compile",
		"test": "hardhat test",
		"coverage": "hardhat coverage",
		"deploy": "hardhat deploy --network base-sepolia",
		"deploy:baseSepolia": "hardhat run scripts/deploy.ts --network base-sepolia",
		"test:baseSepolia": "hardhat run scripts/oracleTest.ts --network base-sepolia",
		"test:reliefLink": "hardhat run scripts/reliefLinkTest.ts --network base-sepolia",
		"node": "hardhat node",
		"sol:format:check": "prettier --check --plugin=prettier-plugin-solidity 'contracts/**/*.sol'",
		"sol:format:write": "prettier --write --plugin=prettier-plugin-solidity 'contracts/**/*.sol'",
		"solhint": "solhint -f table 'contracts/**/*.sol'",
		"format:check": "prettier --check .",
		"format:write": "prettier --write .",
		"lint:check": "eslint .",
		"lint:fix": "eslint --fix .",
		"0-fetchRequest": "hardhat run scripts/flow-test/0-fetchRequest.ts --network base-sepolia",
		"1-buyPolicy": "hardhat run scripts/flow-test/1-buyPolicy.ts --network base-sepolia",
		"2-checkOracleStatus": "hardhat run scripts/flow-test/2-checkOracleStatus.ts --network base-sepolia",
		"3-sendPayout": "hardhat run scripts/flow-test/3-sendPayout.ts --network base-sepolia",
		"4-claimPayout": "hardhat run scripts/flow-test/4-claimPayout.ts --network base-sepolia",
		"5-checkPayoutStatus": "hardhat run scripts/flow-test/5-checkPayoutStatus.ts --network base-sepolia"
	},
	"dependencies": {
		"@chainlink/contracts": "^1.1.0",
		"@openzeppelin/contracts": "5.0.2"
	},
	"devDependencies": {
		"@nomicfoundation/hardhat-chai-matchers": "^2.0.6",
		"@nomicfoundation/hardhat-ethers": "^3.0.5",
		"@nomicfoundation/hardhat-network-helpers": "^1.0.10",
		"@nomicfoundation/hardhat-toolbox": "^4.0.0",
		"@nomicfoundation/hardhat-verify": "^2.0.6",
		"@nomiclabs/hardhat-solhint": "^3.0.1",
		"@openzeppelin/test-helpers": "^0.5.16",
		"@typechain/ethers-v6": "^0.5.1",
		"@typechain/hardhat": "^9.1.0",
		"@types/chai": "^4.3.15",
		"@types/mocha": "^10.0.6",
		"@types/node": "^20.0.0",
		"@typescript-eslint/eslint-plugin": "^6.10.0",
		"@typescript-eslint/parser": "^6.10.0",
		"dotenv": "^16.3.1",
		"eslint": "^8.53.0",
		"eslint-config-prettier": "^9.0.0",
		"eslint-plugin-prettier": "^5.0.1",
		"ethers": "^6.8.1",
		"hardhat": "^2.22.2",
		"hardhat-deploy": "^0.12.4",
		"hardhat-gas-reporter": "^1.0.10",
		"prettier": "^3.0.3",
		"prettier-plugin-solidity": "^1.2.0",
		"solhint": "^4.0.0",
		"solidity-coverage": "^0.8.5",
		"ts-node": "^10.9.2",
		"typechain": "^8.3.2",
		"typescript": "^5.2.2"
	}
}